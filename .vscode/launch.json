{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Next.js: Launch Development Server",
            "skipFiles": ["<node_internals>/**"],
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "dev"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Next.js: Launch Production Server",
            "skipFiles": ["<node_internals>/**"],
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "start"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
